{% extends 'layout.html.twig' %}

{% block title %}WebPack Encore!{% endblock %}

{% block body %}
    <div class="container">
        <h1>WebPack Encore</h1>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bootstrapWorking">
            Clic here !
        </button>
        <div class="modal fade" id="bootstrapWorking" tabindex="-1" role="dialog"
             aria-labelledby="bootstrapWorkingLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="bootstrapWorkingLabel">Bootstrap work !</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" data-toggle="tooltip" title="Close">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3>Good job, Bootstrap work !</h3>
                        <p class="text-center text-success">
                            <i class="fa fa-check fa-10x"></i><br>
                            <small>You see this check ? FontAwesome work !</small>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
